<div class="container">
	<div class="row">
		<div class="col s12 m4">
			<div class="card">
				<div class="card user-info">
					<% unless current_user.profile.url.nil? %>
					<div class="card-image">
						<img src="<%= current_user.profile.url %>" />
					</div>
					<% end %>
				</div>
				<div class="card-content">
					<div class="card-title"><%= current_user.name %></div>
					<p><b>이메일 : <%= current_user.email %></b></p>
					<p><b>작성 글 수 : <%= @posts_count %></b></p>
					
					<%= link_to new_post_path do %>
						<button class="btn purple purple">글쓰기</button>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col s12 m8">
    			<% @posts.each do |post| %>
        			<% if post.content ==params[:contents] %>
        				<%= render partial: "post", object: post %>
        			<% end %>
			<% end %>
		</div>
	</div>
</div>