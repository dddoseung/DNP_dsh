<div class="container">
	<div class="row">
		
		<div class="col s12 m7">
			<font size='5em'>
			<p><b>내가 쓴 글</b></p>
			</font>
    			<% @posts.each do |post| %>
        			<% if current_user == post.user %>
        				<%= render partial: "post", object: post %>
        			<% end %>
			    <% end %>

		</div>
		<div class="col s12 m4">
			<font size='5em'>
			<p>  내 정보</p>
			</font>
			<div class="card">
				<div class="card user-info">
					<% unless current_user.profile.url.nil? %>
					<div class="card-image">
						<img src="<%= current_user.profile.url %>" />
					</div>
					<% end %>
				</div>
				<div class="card-content">
					<div class="card-title"><b><%= current_user.name %></b></div>
					<p><b>이메일 : <%= current_user.email %></b></p>
					<p><b>작성 글 수 : <%= @posts_count %></b></p>
					
					<%= link_to new_post_path do %>
						<button class="btn purple">글쓰기</button>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>